{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "useTabs": false,
    "quoteProps": "as-needed",
    "jsxSingleQuote": true,
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "printWidth": 100,
                "proseWrap": "always"
            }
        },
        {
            "files": "*.json",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": "*.yml",
            "options": {
                "singleQuote": false,
                "tabWidth": 2
            }
        }
    ]
}